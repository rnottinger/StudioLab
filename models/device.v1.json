{
  "title": "Device",
  "type": "object",
  "description": "Describes a device activated on a **CloudHome** account. Each class can contain more than one device and location, centrally managed by the CloudHome service cloud.",
  "x-examples": {},
  "properties": {
    "deviceID": {
      "type": "string",
      "description": "generated by the backend"
    },
    "deviceName": {
      "type": "string",
      "description": "user generated name"
    },
    "dateCreated": {
      "type": "string",
      "format": "date-time",
      "example": "2017-07-21T17:32:28Z",
      "description": "first time of device registration"
    },
    "dateUpdated": {
      "type": "string",
      "format": "date-time",
      "example": "2017-07-21T17:32:28Z",
      "description": "last update of device data"
    },
    "user": {
      "$ref": "./User.v1.json"
    },
    "account": {
      "$ref": "./Account.v1.json"
    },
    "location": {
      "$ref": "./Location.v1.json"
    }
  },
  "required": [
    "deviceName"
  ]
}